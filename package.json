{
  "name": "kaizen",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "scripts": {
    "ruler:apply": "bunx @intellectronica/ruler apply",
    "ruler:apply:nested": "bunx @intellectronica/ruler apply --nested",
    "ruler:revert": "bunx @intellectronica/ruler revert",
    "build": "npx react-router build",
    "dev": "bun run ruler:apply || true && bunx react-router dev",
    "start": "npx react-router-serve ./build/server/index.js --port ${PORT:-8080}",
    "typecheck": "npx react-router typegen && npx tsc",
    "docs:install": "cd docs && bun install",
    "docs:dev": "cd docs && bun run dev",
    "docs:build": "cd docs && bun run build",
    "migrations:run": "bunx convex run migrations:run",
    "migrations:run:one": "bunx convex run migrations:runIt",
    "migrations:runAll": "bunx convex run migrations:runAll",
    "migrations:status": "bunx convex run --component migrations lib:getStatus --watch",
    "migrations:cancel": "bunx convex run --component migrations lib:cancel"
  },
  "dependencies": {
